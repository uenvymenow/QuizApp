<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapplication.MainActivity">

    <!-- Container Linear Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Linear Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Header Topic -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic: Baseball History"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Questions Linear Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/question_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1" />

            <TextView
                android:id="@+id/question_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2" />

            <TextView
                android:id="@+id/question_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3" />

            <TextView
                android:id="@+id/question_4_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4" />

            <TextView
                android:id="@+id/question_5_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5" />

            <TextView
                android:id="@+id/question_6_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 6" />

            <TextView
                android:id="@+id/question_7_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 7" />

            <TextView
                android:id="@+id/question_8_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 8" />

            <TextView
                android:id="@+id/question_9_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 9" />

            <TextView
                android:id="@+id/question_10_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_answers_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:onClick="submitAnswers"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

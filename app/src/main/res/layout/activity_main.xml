<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapplication.MainActivity">

    <!-- Container Linear Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Linear Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Header Topic -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic: Baseball History"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Questions Linear Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Question 1 LinearLayout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_1_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionOneIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question1RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionOneCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question1RadioButton"
                        android:text="27" />
                </RadioGroup>

                <!-- Question 2 -->
                <TextView
                    android:id="@+id/question_2_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2) The Oldest baseball stadium still in use is?" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionTwoCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question2RadioButton"
                        android:text="Fenway Park" />

                    <RadioButton
                        android:id="@+id/questionTwoIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question2RadioButton"
                        android:text="Yankee Stadium" />
                </RadioGroup>

                <!-- Question 3 -->
                <TextView
                    android:id="@+id/question_3_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3) What is the most frequently stolen base?" />

                <EditText
                    android:id="@+id/question3EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusedByDefault="false"
                    android:hint="Answer" />

                <!-- Question 4 -->
                <TextView
                    android:id="@+id/question_4_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4) Which of the aspects of scorekeeping are displayed on a standard scoreboard?" />

                <CheckBox
                    android:id="@+id/questionFourIncorrect1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question4CheckBox"
                    android:text="Field Goals" />

                <CheckBox
                    android:id="@+id/questionFourIncorrect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question4CheckBox"
                    android:text="Goals" />

                <CheckBox
                    android:id="@+id/questionFourCorrect1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question4CheckBox"
                    android:text="Hits" />

                <CheckBox
                    android:id="@+id/questionFourCcorrect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question4CheckBox"
                    android:text="Runs" />

                <!-- Question 5 -->
                <TextView
                    android:id="@+id/question_5_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5) How many innings are in a game?" />

                <RadioGroup
                    android:id="@+id/radioGroup5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionFiveIncorrect1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question5RadioButton"
                        android:text="6" />

                    <RadioButton
                        android:id="@+id/questionFiveCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question5RadioButton"
                        android:text="9" />

                    <RadioButton
                        android:id="@+id/questionFiveIncorrect2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question5RadioButton"
                        android:text="7" />

                    <RadioButton
                        android:id="@+id/questionFiveIncorrect3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question5RadioButton"
                        android:text="8" />
                </RadioGroup>

                <!-- Question 6 -->
                <TextView
                    android:id="@+id/question_6_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionSixIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question6RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionSixCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question6RadioButton"
                        android:text="27" />
                </RadioGroup>

                <!-- Question 7 -->
                <TextView
                    android:id="@+id/question_7_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionSevenIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question7RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionSevenCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question7RadioButton"
                        android:text="27" />
                </RadioGroup>

                <!-- Question 8 -->
                <TextView
                    android:id="@+id/question_8_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionEightIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question8RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionEightCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question8RadioButton"
                        android:text="27" />
                </RadioGroup>

                <!-- Question 9 -->
                <TextView
                    android:id="@+id/question_9_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionNineIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question9RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionNineCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question9RadioButton"
                        android:text="27" />
                </RadioGroup>

                <!-- Question 10 -->
                <TextView
                    android:id="@+id/question_10_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10) How many world series have the Yankees won?" />

                <RadioGroup
                    android:id="@+id/radioGroup10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionTenIncorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question10RadioButton"
                        android:text="12" />

                    <RadioButton
                        android:id="@+id/questionTenCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="question10RadioButton"
                        android:text="27" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_answers_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitAnswers"
                android:text="Submit" />

            <Button
                android:id="@+id/reset_scores_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetScores"
                android:text="Reset" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
